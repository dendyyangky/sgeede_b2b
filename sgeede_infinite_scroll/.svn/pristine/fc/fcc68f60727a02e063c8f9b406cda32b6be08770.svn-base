<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<template id="products_infinite_scroll" inherit_id="website_sale.products" active="True" customize_show="True" name="SGEEDE Infinite Scroll">
			<xpath expr="//div[@id='products_grid']//table" position="attributes">
				<attribute name="t-att-class">'sgeede-infinite-scroll'</attribute>
			</xpath>

			<xpath expr="//div[@id='products_grid']//table//tbody//tr[@t-foreach='bins']" position="attributes">
				<attribute name="t-att-class">'sgeede-infinite-get'</attribute>
			</xpath>

			<xpath expr="//div[@id='products_grid']//table//tbody" position="inside">
				<t t-if="category">
					<tr class="sgeede-infinite-pagination">
						<t t-if="int(pager['page']['num']) + 1 &lt;= int(pager['page_count'])">
							<td><a t-att-href="'/shop/category/' + slug(category) + '/page/' + str(int(pager['page']['num']) + 1) + ('?search=' + search if search else '')" style="display: none">Page <span t-esc="int(pager['page']['num']) + 1"/></a></td>
						</t>
						<td><span class="max-page" t-esc="pager['page_count']" style="display: none"/></td>
					</tr>
				</t>
				<t t-if="not category">
					<tr class="sgeede-infinite-pagination">
						<t t-if="int(pager['page']['num']) + 1 &lt;= int(pager['page_count'])">
							<td><a t-att-href="'/shop/page/' + str(int(pager['page']['num']) + 1) + ('?search=' + search if search else '')" style="display: none">Page <span t-esc="int(pager['page']['num']) + 1"/></a></td>
						</t>
						<td><span class="max-page" t-esc="pager['page_count']" style="display: none"/></td>
					</tr>
				</t>
			</xpath>
		</template>

